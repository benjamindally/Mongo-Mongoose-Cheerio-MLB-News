<div class="header jumbotron text-center">

    <h1>Fantasy MLB News</h1>
    <h3 class="text-center">Read and Take Notes</h3>
    <button type="button" class="btn btn-primary" id="scraper">Scrape</button>
</div>

<div class="wrapper text-center">

    <div class="row">

        <div class="col-md-8 text-center mx-auto">
            <ul>
                {{#if article}} {{#each article}}
                <li class="card">
                    <p>{{this.title}}</p>
                    <p>{{this.author}}</p>
                    <p>{{this.date}}</p>
                    <p>{{this.paragraph}}</p>
                    <a href="{{this.link}}">Read More</a>
                    <button type="button" value="{{this.id}}" data-title={{this.title}} class="notes btn btn-primary" data-toggle="modal" data-target="#noteModal">
                        Notes
                    </button>
                    <button type="button" value="{{this.id}}" data-title={{this.title}} class=" btn btn-primary" id="save" data-toggle="modal"
                        data-target="#noteModal">
                        Save
                    </button>
                </li>



                {{/each}}

            </ul>
            {{else}}
            <h2>Get your scrape on</h2>
            {{/if}}
        </div>


        <!-- Modal -->


        <div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="noteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title article_title" id="noteModalLabel">Create or View Notes</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Title:</p>
                        <input id="note_title">
                        <br>

                        <p>Note:</p>
                        <textarea class="new_note"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="view_notes">View Notes</button>
                        <button type="submit" class="btn btn-primary" data-dismiss="modal" id="save_note">Save note</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>